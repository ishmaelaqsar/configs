# i3status configuration file
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    #color_good     = "#00FF00"
    #color_degraded = "#FFFFFF"
    #color_bad = "#FF0000"
    interval = 5                    
}

order += "volume master"
order += "ethernet eth0"
order += "wireless _first_"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "load"
#order += "cpu_usage"
order += "disk /"
order += "battery 0"
order += "tztime local"

volume master {
    format = " %volume"
    format_muted = " %volume"
    device = "pulse"
    mixer = "Master"
    mixer_idx = 0                                        
}

ethernet eth0 {
    format_up =  " Ω: %ip"
    format_down = " ∅ eth0"
}


wireless _first_ {
    format_up = " (%essid %quality) %ip"
    format_down = " down"
}

load {
    format = " %1min"
}

cpu_usage {
    format = "%usage"
        
}

disk "/" {
    format = " %free" 
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
        
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
        
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = "No battery"
    path = "/sys/class/power_supply/BAT%d/uevent"
    status_bat = ""
    status_chr = ""
    status_full = ""
    low_threshold = 30
    threshold_type = percentage
    integer_battery_capacity = true
}

tztime local {
    format = " %d-%m-%Y %H:%M:%S"           
}
